//Note the following code will not work on Sololearn, please download the SFML API to test this code.

//A example of how to create a window with SFML using fstream to fetch the window's width and height and apply it.

//In the file MyWindow.ini

/*WindowInfo
Window_Width 1366
Window_Height 786*/


#include <fstream>
#include <iostream>
#include "SFML\Graphics"

using namespace std;
using namespace sf;

int main()
{

    string file;
    string iwinx; int winx;
    string iwiny; int winy;
    ifstream MyFile("MyWindow.ini");
    MyFile >> file >> iwinx >> winx >> iwiny >> winy ;
        cout << file  << endl << iwinx << ", " << winx << endl << iwiny << ", " << winy;

    MyFile.close();

    RenderWindow window(VideoMode(winx, winy), "Window with SFML")

    while (window.isOpen())
    {
        Event event;
        while (window.pollEvent(event))
            {
                if (event.type == sf::Event::Closed)
                window.close();
            }

        window.clear();

        window.display();
    

    return 0;
}

